<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>backend-practice</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-scale-700">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            class="block w-full py-2 px-5 bg-zinc-700 rounded-lg outline-none"
            type="text"
            placeholder="Title goes here..."
            name="title"
          />
          <textarea
            class="block rounded-lg outline-none mt-2 w-full px-5 py-2 bg-zinc-700 resize-none"
            placeholder="write your task details"
            name="details"
          ></textarea>
          <input
            class="mt-2 bg-blue-600 px-5 py-2 rounded-md"
            type="submit"
            value=" Create task"
          />
        </form>
      </div>
      <div class="task flex p-10 gap-3 flex-wrap">
        <% if (files.length > 0) { %> <% files.forEach((val) => { %>
        <div class="task min-w-72 px-3 py-4 bg-zinc-700 rounded-md">
          <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
          <div class="flex w-full justify-between items-center mt-3">
            <a href="/file/<%=val%>" class="text-blue-400 inline-block "
              >Read More.</a
            >
            <a href="/edit/<%=val  %>" class="text-zinc-400">Edit Filename</a>
          </div>
        </div>
        <% }) %> <%} else { %>
        <h3 class="text-zinc-700">no task yet.</h3>
        <% }%>

        <!-- <div class="task hidden w-72 px-3 py-4 bg-zinc-700 rounded-md">
            <h1 class="text-white text-3xl tracking-tighter">Some task goes here.</h1>
            <a href="" class="text-blue-400 inline-block mt-3">Read More.</a>
        </div>
        <div class="task hidden w-72 px-3 py-4 bg-zinc-700 rounded-md">
            <h1 class="text-white text-3xl tracking-tighter">Some task goes here.</h1>
            <a href="" class="text-blue-400 inline-block mt-3">Read More.</a>
        </div> -->
      </div>
    </div>

    <script src="/javascripts/script.js"></script>
  </body>
</html>
